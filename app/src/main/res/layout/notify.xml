<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/listView"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_weight="9"
        android:fastScrollEnabled="true"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignEnd="@+id/listView"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:text="Add"
        android:id="@+id/button"
        android:layout_weight="1"
        android:onClick="btnAdd"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignEnd="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:text="Remove"
        android:id="@+id/button1"
        android:layout_weight="1"
        android:onClick="btnRemove"/>

    <!--android:divider="@android:color/darker_gray"添加分割线为灰色-->
    <!--android:dividerHeight="10dp"给分割线设置高度-->
    <!--android:divider="null"分割线设置为透明-->
    <!--android:scrollbars="none"隐藏listview的滚动条-->
    <!--android:listSelector="@android:color/transparent"取消listview的item点击效果-->
</LinearLayout>
